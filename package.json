{
  "name": "api",
  "version": "1.0.0",
  "engines": {
    "node": "12.19.0"
  },
  "  engineStrict": true,
  "description": "Typescript API for koleg",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "prestart": "npm run build",
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "codegen": " npx swagger-typescript-api -p openapi.yml -n KolegApi.ts -o ./auto"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/koleg1/api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/koleg1/api/issues"
  },
  "homepage": "https://gitlab.com/koleg1/api#readme",
  "dependencies": {
    "@types/bluebird": "^3.5.33",
    "express": "^4.17.1",
    "slugify": "^1.4.6",
    "swagger-typescript-api": "^3.0.1",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.5"
  },
  "devDependencies": {
    "@types/email-templates": "^7.1.0",
    "@types/express": "^4.17.8",
    "@types/node": "^14.14.10",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.0",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3",
    "swagger-typescript-codegen": "^3.2.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
