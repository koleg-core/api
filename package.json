{
  "name": "api",
  "version": "1.0.0",
  "engines": {
    "node": "12.19.0"
  },
  "  engineStrict": true,
  "description": "Typescript API for koleg",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "prestart": "npm run build",
    "start": "node -r ts-node/register ./src/main.ts",
    "dev": "nodemon src/**/*.ts",
    "lint": "eslint . --ext .ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "codegen": " npx swagger-typescript-api -p openapi.yml -n KolegApi.ts -o ./auto"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/koleg1/api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/koleg1/api/issues"
  },
  "homepage": "https://gitlab.com/koleg1/api#readme",
  "dependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/crypto-js": "^4.0.1",
    "@types/passport": "^1.0.4",
    "@types/passport-http-bearer": "^1.0.36",
    "crypto-js": "^4.0.0",
    "express": "^4.17.1",
    "passport-bearer-strategy": "^1.0.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.5",
    "slugify": "^1.4.6",
    "swagger-typescript-api": "^3.0.1"
  },
  "devDependencies": {
    "@types/email-templates": "^7.1.0",
    "@types/express": "^4.17.8",
    "@types/node": "^14.14.10",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/parser": "^4.9.1",
    "@types/mocha": "^8.0.4",
    "mocha": "^8.2.1",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "swagger-typescript-codegen": "^3.2.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
