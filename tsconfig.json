{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "esModuleInterop": true,
        "composite": true,
        "noEmit": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "domain/*": ["./src/domain/*"],
            "infra/*": ["./src/infra/*"],
            "app/*": ["./src/app/*"],
            "*": [
                "./types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "types/*.d.ts"
    ],
    "exclude": [
        "./node_modules",
        "dist",
        ".vscode"
    ]
}
